		<![endif]-->
	</head>
	<body>

		<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
		<script src="assets/js/jquery.min.js"></script>
		<!-- Include all compiled plugins (below), or include individual files as needed -->
		<script src="assets/js/bootstrap.min.js"></script>
		<script src="assets/js/content.js"></script>

		<!-- Static navbar -->
		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="#">moscow_mule</a>
				</div>
				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav">
						<li class="active"><a href="#">Home</a></li>
						<li><a href="#about">About</a></li>
						<li><a href="#contact">Contact</a></li>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
							<ul class="dropdown-menu">
								<li><a href="#">Action</a></li>
								<li><a href="#">Another action</a></li>
								<li><a href="#">Something else here</a></li>
								<li role="separator" class="divider"></li>
								<li class="dropdown-header">Nav header</li>
								<li><a href="#">Separated link</a></li>
								<li><a href="#">One more separated link</a></li>
							</ul>
						</li>
					</ul>
					<ul class="nav navbar-nav navbar-right">
						<li><a href="../reload/">Reload Features</a></li>
					</ul>
				</div><!--/.nav-collapse -->
			</div>
		</nav>

		<div class="container-fluid">
			<div class="row">
				<div class="col-sm-3 col-md-2 sidebar">
					<ul class="nav nav-sidebar">
						<li class="active"><a href="#">Overview <span class="sr-only">(current)</span></a></li>
						<% @data["features"].each_with_index do |feature, index| %>
							<li><a href="#" onclick="setContent(<%= index %>);return false;"><%= feature["feature_title"] %></a></li>
						<% end %>
					</ul>
				</div>
				<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
					<h1 class="page-header">The Features</h1>
					<div class="row">
						<div class="col-md-9 main">	
							<div class="content"></div>
						</div>
						<div class="col-md-3">
							<ul class="list-group">
								<h5 class="list-group-item-heading">Testers</h5>
								<% @data["tags_testers_global"].each do |key, value| %>
									<li class="list-group-item"><a href="#" onclick="setContent_taglist('testers',<%= value["id"] %>);return false;"><%= key %></a><span class="badge"><%= value["scenario_ids"].size %></span></li>
								<% end %>
							</ul>
							<ul class="list-group">
								<h5 class="list-group-item-heading">Platforms</h5>
								<% @data["tags_platforms_global"].each do |key, value| %>
									<li class="list-group-item"><a href="#" onclick="setContent_taglist('platforms',<%= value["id"] %>);return false;"><%= key %></a><span class="badge"><%= value["scenario_ids"].size %></span></li>
								<% end %>
							</ul>
							<ul class="list-group">
								<h5 class="list-group-item-heading">Testplans</h5>
								<% @data["tags_testplans_global"].each do |key, value| %>
									<li class="list-group-item"><a href="#" onclick="setContent_taglist('testplans',<%= value["id"] %>);return false;"><%= key %></a><span class="badge"><%= value["scenario_ids"].size %></span></li>
								<% end %>
							</ul>
							<ul class="list-group">
								<h5 class="list-group-item-heading">Tags</h5>
								<% @data["tags_global"].each do |key, value| %>
									<li class="list-group-item"><a href="#" onclick="setContent_taglist('tags',<%= value["id"] %>);return false;"><%= key %></a><span class="badge"><%= value["scenario_ids"].size %></span></li>
								<% end %>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>